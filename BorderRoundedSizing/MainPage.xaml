<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BorderRoundedSizing.MainPage">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30">
            <Border HeightRequest="64" WidthRequest="320" Stroke="Red" StrokeThickness="4" Background="Blue">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16" />
                </Border.StrokeShape>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
